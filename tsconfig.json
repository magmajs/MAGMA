{
    "compilerOptions": {
        "target": "es6",
        "outDir": "dist",
        "rootDir": "./",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "commonJS",
        "removeComments": true,
        "declaration": true,
        "strictPropertyInitialization": false
    },
    "typedocOptions": {
        "entryPoints": ["src/index.ts"],
        "out": "docs",
        "entryPointStrategy": "expand"
    },
    "exclude": [
        "dist",
        "test",
    ]
}